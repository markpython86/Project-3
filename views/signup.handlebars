<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2 signup">
        <h1>Minimalist Journal</h1>
        <h3>Sign Up Page</h3>
        <form class="clearfix mb-4" action="/signup" method="POST">
          <div class="form-group">
            <label for="first-name">First Name</label>
            <input name="first" type="text" id="first-name" class="form-control" aria-describedby="example-text" placeholder="First Name">
          </div>
          <div class="form-group">
            <label for="last-name">Last Name</label>
            <input name="last" type="text" id="last-name" class="form-control" aria-describedby="example-text" placeholder="Last Name">
          </div>
          <div class="form-group">
            <label for="birthday">Date of Birth</label>
            <input name="birthday" type="date" id="birthday" class="form-control" aria-describedby="example-text">
          </div>
          <div class="form-group">
            <label for="email">Email Address</label>
            <input name="email" type="text" id="email" class="form-control" aria-describedby="example-text" placeholder="Your Email">
          </div>
          <div class="form-group">
            <label for="username">Username</label>
            <input name="username" type="text" id="username" class="form-control" aria-describedby="example-text" placeholder="Username">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input name="password" type="password" class="form-control" id="password" aria-describedby="example-description" placeholder="Password"></input>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
    
      </div>
    </div>
  </div>
</div>

