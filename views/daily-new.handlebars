<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2 signup">
        <h1>Minimalist Journal</h1>
        <h3>How was Your Day Today?</h3>
        {{#each users}}
        <form class="clearfix mb-4" action="/daily/{{id}}" method="POST">
            <br>
          <div class="form-group">
            <label for="highlights">Your Daily Highlights</label>
            <input name="highlights"type="text" id="highlights" class="form-control" aria-describedby="example-text" placeholder="Highlights">
          </div>
          <div class="form-group">
            <label for="positive">Your Positive Moment for Today</label>
            <input name="positive" type="text" id="positive" class="form-control" aria-describedby="example-text" placeholder="Positives">
          </div>
          <div class="form-group">
            <label for="negative">Your Negative Moment for Today</label>
            <input name="negative" type="text" id="negative" class="form-control" aria-describedby="example-text" placeholder="Negatives">
          </div>
          <div class="form-group">
            <label for="wakeup">Time You Woke Up?</label>
            <input name="wakeup" type="time" id="negative" class="form-control" aria-describedby="example-text" placeholder="Wakeup Time">
          </div>
          <div class="form-group">
            <label for="sleep">Time Your Going To Bed</label>
            <input name="sleep" type="time" id="negative" class="form-control" aria-describedby="example-text" placeholder="Sleep Time">
          </div>
          <button id="submit" class="btn btn-primary float-right">Confirm</button>
        </form>
        {{/each}}
      </div>
    </div>
  </div>
</div>

