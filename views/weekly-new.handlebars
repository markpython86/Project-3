<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2 signup">
        <h1>Minimalist Journal</h1>
        <h3>How was Your Day Today?</h3>
        {{#each users}}
        <form class="clearfix mb-4" action="/weekly/{{id}}" method="POST">
            <br>
          <div class="form-group">
            <label for="best">Your Best of the week</label>
            <input name="best" type="text" id="best" class="form-control" aria-describedby="example-text" placeholder="Best">
          </div>
          <div class="form-group">
            <label for="worst">Your Worst of the week</label>
            <input name="worst" type="text" id="worst" class="form-control" aria-describedby="example-text" placeholder="Worst">
          </div>
          <div class="form-group">
            <label for="next">Whats Next?</label>
            <input name="next" type="text" id="next" class="form-control" aria-describedby="example-text" placeholder="Next">
          </div>
          <button id="submit" class="btn btn-primary float-right">Confirm</button>
        </form>
        {{/each}}
      </div>
    </div>
  </div>
</div>

