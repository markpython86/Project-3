

{{!-- Weekly card layout. --}}

<div class="contatiner cardContainer">
    <div class="row">

        {{!-- Add new entry card. --}}
        <div class="card mb-3 col-sm-12 col-lg-6 col-xl-4">
            <div class="plusButton">
                <span class="add"><a href="/weekly/new">+</a></span>
            </div>
        </div>


        {{!-- Main weekly card. --}}
        {{#each weekly}}
        <div class="card mb-3 col-sm-12 col-lg-6 col-xl-4">

            <div class="card-header bg-transparent">
                <div id="weeklyRow">
                    <span>01/01-01/08</span>
                    <span><strong>SUMMARY</strong></span>
                </div>
            </div>

            <div class="card-body">
                <div class="contentSection">
                    <span class="contentSection">
                        <i class="fas fa-arrow-circle-up"></i>
                        <strong>Best:</strong> {{best}}
                    </span>
                    <br>
                    <span class="contentSection">
                        <i class="fas fa-arrow-circle-down"></i>
                        <strong>Worst:</strong> {{worst}}
                    </span>
                    <br>
                    <span class="contentSection">
                        <i class="fas fa-arrow-circle-right"></i>
                        <strong>Next:</strong> {{next}}
                    </span>
                </div>

            </div>

            <div class="card-footer bg-transparent habitsRow">
                <div>
                    <span>
                        <i class="fas fa-running"></i>
                    </span>
                    <span>
                        <i class="fas fa-dumbbell"></i>
                    </span>
                    <span>
                        <i class="fas fa-tint"></i>
                    </span>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>

